<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Search Patients</title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <%- include('../partials/_navbar') %>
  <main class="container">
    <h1>Patient Search</h1>
    <form action="/appointments/search-patients/results" method="GET">
      <input
        name="q"
        type="text"
        placeholder="Search patients by name or CPR"
        value="<%= query || '' %>"
        autofocus
        autocomplete="off"
      />
      <button type="submit">Search</button>
    </form>

    <% function highlight(text, query) { 
      if (!text) return '';               
      if (!query) return text;
      const escapedQuery = query.replace(/[-\/\\^$*+?.()|[\]{}]/g, '\\$&');
      const regex = new RegExp(escapedQuery, 'gi');
      return text.replace(regex, match => `<mark>${match}</mark>`);
    } %>

    <% if (patients && patients.length) { %>
      <table class="styled-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>CPR</th>
            <th>Phone</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% patients.forEach(patient => { %>
            <tr>
              <td><%- highlight(patient.profile.fullName, query) %></td>
              <td><%- highlight(patient.profile.cpr, query) %></td>
              <td><%= patient.profile.phone %></td>
              <td>
                <a href="/appointments/patient-history/<%= patient._id %>">View History</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else if (typeof query !== 'undefined') { %>
      <p>No patients found for "<%= query %>"</p>
    <% } %>
  </main>
  <%- include('../partials/_footer') %>
</body>

</html>
