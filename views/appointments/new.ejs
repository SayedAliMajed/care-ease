<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>New Availability</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <main class="container">
    <h2>Add New Availability</h2>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div style="color: red; margin-bottom: 16px; padding: 10px; border: 1px solid red; border-radius: 4px;">
        <%= error %>
      </div>
    <% } %>
    
    <form action="/availabilitys" method="POST">
      <label>Date:
        <input type="date" name="date" value="<%= typeof date !== 'undefined' ? date : '' %>" required />
      </label>

      <label>Opening Time:
        <input type="time" name="openingTime" value="<%= typeof openingTime !== 'undefined' ? openingTime : '' %>" required />
      </label>

      <label>Closing Time:
        <input type="time" name="closingTime" value="<%= typeof closingTime !== 'undefined' ? closingTime : '' %>" required />
      </label>

      <label>Slot Duration (minutes):
        <input type="number" name="duration" min="1" value="<%= typeof duration !== 'undefined' ? duration : '' %>" required />
      </label>

      <label for="doctorId">Assign to Doctor</label>
      <select name="doctorId" id="doctorId" required>
        <% doctors.forEach(doctor => { %>
          <option value="<%= doctor._id %>" 
            <%= (typeof doctorId !== 'undefined' && doctorId === doctor._id.toString()) ? 'selected' : '' %>>
            <%= doctor.profile.fullName %>
          </option>
        <% }) %>
      </select>
      
      <div class="break-time-section">
        <h3>Break Time (Optional)</h3>
        <label>Break Start Time:
          <input type="time" name="breakStartTime" value="<%= typeof breakStartTime !== 'undefined' ? breakStartTime : '' %>" />
        </label>

        <label>Break End Time:
          <input type="time" name="breakEndTime" value="<%= typeof breakEndTime !== 'undefined' ? breakEndTime : '' %>" />
        </label>
      </div>

      <label for="isRepeating">Repeat Daily:</label>
      <input type="checkbox" name="isRepeating" id="isRepeating" 
        <%= (typeof isRepeating !== 'undefined' && isRepeating) ? 'checked' : '' %> />

      <button type="submit" class="button-primary">Add Availability</button>
    </form>
    <a href="/availabilitys" class="button-outline">Back to List</a>
  </main>
   <%- include('../partials/_footer') %>
</body>
</html>