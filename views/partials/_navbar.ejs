<nav>
  <% if (user && user.profile && user.profile.fullName) { %>
    <p><strong>Welcome, <%= user.profile.fullName %></strong></p>

    <% if (user.role === 'patient') { %>
      <a href="/appointments">My Appointments</a>
      <a href="/appointments/new">Book Appointment</a>
    <% } else if (user.role === 'doctor') { %>
      <a href="/availabilitys">Availability</a>
      <a href="/admin/dashboard">Dashboard</a>  <!-- CHANGED THIS -->
      <a href="/appointments">Appointments</a>
    <% } else if (user.role === 'employee') { %>
      <a href="/admin/dashboard">Dashboard</a>  <!-- CHANGED THIS -->
      <a href="/appointments">Appointments</a>
      <a href="/availabilitys">Availability</a>
    <% } else if (user.role === 'admin') { %>
      <a href="/admin/dashboard">Dashboard</a>  <!-- CHANGED THIS -->
      <a href="/appointments">Appointments</a>
      <a href="/admin/users">Users</a>
      <a href="/availabilitys">Availability</a>
    <% } %>

    <a href="/auth/sign-out">Sign Out</a>

  <% } else { %>
    <a href="/auth/sign-up">Sign Up</a>
    <a href="/auth/sign-in">Sign In</a>
  <% } %>
</nav>