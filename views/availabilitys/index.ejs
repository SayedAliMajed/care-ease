<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Availability List</title>
   <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <main>
    <h2>Availability List</h2>
    <a href="/availabilitys/new">Add New Availability</a>
    <table border="1">
      <thead>
        <tr>
          <th>Date</th>
          <th>From - To</th>
          <th>Slot Duration (mins)</th>
          <th>Doctor</th>
          <th>Break From - To</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% availabilitys.forEach(function(avail) { %>
          <tr>
            <td><%= new Date(avail.date).toDateString() %></td>
            <td><%= avail.openingTime %> - <%= avail.closingTime %></td>
            <td><%= avail.duration %></td>
            <td><%= avail.doctorId && avail.doctorId.profile ? avail.doctorId.profile.fullName : 'N/A' %></td>
            <td>
              <% if (avail.breakTimes && avail.breakTimes.length) { %>
                <% avail.breakTimes.forEach(function(breakTime) { %>
                  <div><%= breakTime.startTime %> - <%= breakTime.endTime %></div>
                <% }) %>
              <% } else { %>
                None
              <% } %>
            </td>
            <td>
              <a href="/availabilitys/<%= avail._id %>/edit">Edit</a>
              <form action="/availabilitys/<%= avail._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>